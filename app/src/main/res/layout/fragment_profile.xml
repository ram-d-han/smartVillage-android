<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.user.smartvillage.Activity.dashboard_user.profile.ProfileFragment"
    android:orientation="vertical"
    android:background="@drawable/templatebg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:id="@+id/profile"
            android:layout_width="200dp"
            android:layout_height="220dp"
            android:paddingTop="20dp"
            android:src="@drawable/profil1"
            android:translationX="80dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="24dp"
            android:src="@drawable/ic_camera"
            android:translationX="60dp"
            android:translationY="160dp"
            app:layout_constraintBottom_toBottomOf="@id/profile"
            app:layout_constraintRight_toRightOf="@id/profile" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:text="Ramdhan Khosim Nur Ikhsan"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="19dp"
        android:textStyle="bold"
        android:drawableLeft="@drawable/ic_name"
        android:textColor="@color/black"
        android:background="#C7C8C9"/>

    <TextView
        android:layout_width="309dp"
        android:layout_height="50dp"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="5dp"
        android:background="#BFFFFFFF"
        android:gravity="center_vertical"
        android:text="SMKN 1 JENANGAN PONOROGO"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:translationY="-15dp"
        tools:ignore="RtlCompat" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="30dp"
        android:background="#BFFFFFFF"
        android:drawableLeft="@drawable/ic_alamat"
        android:gravity="center_vertical"
        android:text="PONOROGO"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:translationY="-15dp"
        tools:ignore="RtlCompat" />

</LinearLayout>


















