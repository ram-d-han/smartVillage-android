<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/template"
    android:translationY="20dp"
    tools:context="com.example.user.smartvillage.Activity.SignUpActivity">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_EMAIL_signup"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:textColorHint="#000"
        android:translationY="30dp">

        <EditText
            android:id="@+id/Signup_EMAIL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_username_signup"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_EMAIL_signup"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="30dp"
        android:textColorHint="#000"
        android:translationY="30dp">

        <EditText
            android:id="@+id/Signup_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:inputType="textPersonName"

            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_password_signup"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_username_signup"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:textColorHint="#000"
        android:translationY="30dp">

        <EditText
            android:id="@+id/Signup_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/password"
            android:inputType="textPassword"

            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_Konfirmasi_password_signup"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_password_signup"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="30dp"
        android:textColorHint="#000"
        android:translationY="30dp">

        <EditText
            android:id="@+id/Signup_Konfimasi_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirm password"
            android:inputType="textPassword" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/button_signup"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_Konfirmasi_password_signup"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@color/lightGreen"
        android:text="Sign Up"
        android:textColor="@color/white"
        android:translationY="50dp" />

    <Button
        android:id="@+id/Button_link_signin"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_signup"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@color/lightGreen"
        android:text="Go To Sign In"
        android:textColor="@color/white"
        android:translationY="50dp" />

</RelativeLayout>